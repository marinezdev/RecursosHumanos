                                                <option value="0">Seleccionar</option>
                                                @foreach (var item1 in ViewBag.JornadaTrabajo)
                                                {
                                                    <option value="@item1.Id" @(ViewBag.vacante != null && item1.Id == ViewBag.vacante.Cat_JornadaTrabajo.Id ? "selected" : "")>
